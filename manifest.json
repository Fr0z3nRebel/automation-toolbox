{
  "manifest_version": 3,
  "name": "Automation Toolbox",
  "version": "1.0.0",
  "description": "Automation tools for various platforms including Artistly",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://app.artistly.ai/*"
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.artistly.ai/*"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_title": "Open Automation Toolbox"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}
